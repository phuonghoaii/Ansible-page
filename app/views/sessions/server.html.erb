<% provide(:title, "Server") %>
<h1>Server Information</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :ip %>
      <%= f.text_field :ip %>

      <%= f.label :ssk_key %>
      <%= f.text_field :ssk_key %>

      <%= f.submit "Accept", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
